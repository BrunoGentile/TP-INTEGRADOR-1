        .auto-style8 {
            width: 403px;
        }
    </style>
</head>
<body>
    <form id="form1" runat="server">
        <div>
            <table class="auto-style1">
                <tr>
                    <td id="lbl_usuario" class="auto-style4">
                        <asp:Label ID="lbl_Admin" runat="server"></asp:Label>
                    </td>
                    <td colspan="3">&nbsp;</td>
                    <td>
                        <asp:HyperLink ID="hlVolver" runat="server" NavigateUrl="~/Login.aspx">Volver</asp:HyperLink>
                    </td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td class="auto-style4">&nbsp;</td>
                    <td colspan="3">&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td class="auto-style3" colspan="4">
                        <asp:Label ID="Label2" runat="server" Font-Size="XX-Large" Text="Baja de Paciente"></asp:Label>
                    </td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td class="auto-style5"></td>
                    <td class="auto-style6" colspan="3"></td>
                    <td class="auto-style6"></td>
                    <td class="auto-style6"></td>
                </tr>
                <tr>
                    <td class="auto-style4">&nbsp;</td>
                    <td class="auto-style7">Filtrar por DNI:</td>
                    <td class="auto-style8">
                        <asp:TextBox ID="txt_DniPaciente" runat="server" Width="375px"></asp:TextBox>
                    </td>
                    <td class="auto-style8">
                        <asp:RegularExpressionValidator ID="rev_DniPaciente" runat="server" ControlToValidate="txt_DniPaciente" ErrorMessage="Ingrese DNI del paciente"></asp:RegularExpressionValidator>
                    </td>
                    <td>
                        <asp:Button ID="btn_aceptar" runat="server" OnClick="btn_aceptar_Click" Text="Aceptar" />
